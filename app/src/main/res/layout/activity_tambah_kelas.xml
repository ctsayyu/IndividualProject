<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".TambahInstrukturActivity">

    <EditText
        android:id="@+id/edit_tambah_tgl_mulai_kls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Tuliskan Tanggal Mulai Kelas"
        android:inputType="date" />

    <EditText
        android:id="@+id/edit_tambah_tgl_akhir_kls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Tuliskan Tanggal Akhir Kelas"
        android:inputType="date" />

    <EditText
        android:id="@+id/edit_tambah_id_ins_kls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Tuliskan ID Instruktur"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edit_tambah_id_mat_kls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Tuliskan ID Materi"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="12dp">

        <Button
            android:id="@+id/btn_tambah_kelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:text="Tambah Peserta" />

        <Button
            android:id="@+id/btn_lihat_kelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lihat Peserta" />

    </LinearLayout>
</LinearLayout>