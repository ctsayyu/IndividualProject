<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".TambahInstrukturActivity">

    <EditText
        android:id="@+id/edit_tambah_nama_pst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Tuliskan Nama Lengkap"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edit_tambah_email_pst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Tuliskan Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/edit_tambah_hp_pst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Tuliskan No HP"
        android:inputType="number" />

    <EditText
        android:id="@+id/edit_tambah_instansi_pst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Tuliskan Nama Instansi"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="12dp">

        <Button
            android:id="@+id/btn_tambah_peserta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:text="Tambah Peserta"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_lihat_peserta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lihat Peserta"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>